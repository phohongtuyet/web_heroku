<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" rel="stylesheet">
	<title><%= title %></title>
</head>

<body>
	<div class="container">
		<!-- Navbar -->
		<%- include("../includes/navbar"); %>
		
		<!-- Card: Header and Footer -->
		<div class="card mt-3">
			<div class="card-header"><%= title %></div>
			<div class="card-body table-responsive">
				<a href="" class="btn btn-primary mb-2"><i class="bi bi-plus-lg"></i> Đăng bài viết</a>
				<table class="table table-bordered table-hover table-sm mb-0">
					<thead>
						<tr>
							<th width="5%">#</th>
							<th width="15%">Chủ đề</th>
							<th width="15%">Tiêu đề</th>
							<th width="40%">Tóm Tắt</th>
							<th width="10%">Ngày đăng</th>
							<th width="5%">Sửa</th>
							<th width="5%">Xóa</th>
						</tr>
					</thead>
					<tbody>
						<% var stt = 1; %>
						<% posts.forEach(function(bv){ %>
							<tr>
								<td class="align-middle"><%= stt++ %></td>
								<td class="align-middle small"><%= bv.categoryName %></td>
								<td class="align-middle small"><%= bv.title %></td>
								<td class="align-middle small"><%= bv.summary %></td>
								<td class="align-middle small"><%= bv.createdAt %></td>
								<td class="align-middle text-center"><a href="/post/edit/<%= bv.id %>"><i class="bi bi-pencil-square"></i></a></td>
								<td class="align-middle text-center"><a href="/post/delete/<%= bv.id %>" onclick="return confirm('Bạn có muốn xóa bài viết <%= bv.TieuDe %> không?');"><i class="bi bi-trash text-danger"></i></a></td>
							</tr>
						<% }); %>
					</tbody>
				</table>
			</div>
		</div>
		
		<!-- Footer -->
		<%- include("../includes/footer"); %>
	</div>
	
	<%- include("../includes/javascript"); %>
</body>

</html>